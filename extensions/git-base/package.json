{
	"name": "git-base",
	"displayName": "%displayName%",
	"version": "1.0.0",
	"description": "%description%",
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/vscode.git"
	},
	"license": "MIT",
	"publisher": "vscode",
	"main": "./out/extension.js",
	"browser": "./dist/browser/extension.js",
	"scripts": {
		"compile": "gulp compile-extension:git-base",
		"update-grammar": "node ./build/update-grammars.js",
		"watch": "gulp watch-extension:git-base"
	},
	"contributes": {
		"commands": [
			{
				"command": "git-base.api.getRemoteSources",
				"title": "%command.api.getRemoteSources%",
				"category": "Git Base API"
			}
		],
		"grammars": [
			{
				"language": "git-commit",
				"scopeName": "text.git-commit",
				"path": "./syntaxes/git-commit.tmLanguage.json"
			},
			{
				"language": "git-rebase",
				"scopeName": "text.git-rebase",
				"path": "./syntaxes/git-rebase.tmLanguage.json"
			},
			{
				"language": "ignore",
				"scopeName": "source.ignore",
				"path": "./syntaxes/ignore.tmLanguage.json"
			}
		],
		"languages": [
			{
				"id": "git-commit",
				"aliases": [
					"Git Commit Message",
					"git-commit"
				],
				"filenames": [
					"COMMIT_EDITMSG",
					"MERGE_MSG"
				],
				"configuration": "./languages/git-commit.language-configuration.json"
			},
			{
				"id": "git-rebase",
				"aliases": [
					"Git Rebase Message",
					"git-rebase"
				],
				"filenames": [
					"git-rebase-todo"
				],
				"filenamePatterns": [
					"**/rebase-merge/done"
				],
				"configuration": "./languages/git-rebase.language-configuration.json"
			},
			{
				"id": "ignore",
				"aliases": [
					"Ignore",
					"ignore"
				],
				"extensions": [
					".gitignore_global",
					".gitignore",
					".git-blame-ignore-revs"
				],
				"configuration": "./languages/ignore.language-configuration.json"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "git-base.api.getRemoteSources",
					"when": "false"
				}
			]
		}
	},
	"activationEvents": [
		"*"
	],
	"devDependencies": {
		"@types/node": "20.x"
	},
	"engines": {
		"vscode": "0.10.x"
	},
	"icon": "resources/icons/git.png",
	"capabilities": {
		"virtualWorkspaces": true,
		"untrustedWorkspaces": {
			"supported": true
		}
	}
}
